extends layout

block content
  .fontWhite
    h1= title

    - var noTitle = '';
    - var noAuthor = '';
    if errors 
      for err in errors
        if err.path == "title"
          - noTitle = err.message
        if err.path == "author"
          - noAuthor = err.message

    form(method='POST' action='/books/new')
      p
        label(for="title") Title
        input(type="text" name="title" id="title" placeholder=`${noTitle}`)
      p
        label(for="author") Author
        input(type="text" name="author" id="author" placeholder=`${noAuthor}`)
      p
        label(for="genre") Genre
        input(type="text" name="genre" id="genre")
      p
        label(for="year") Year
        input(type="text" name="year" id="year")
      p
        input.border(type="submit" value="Create New Book")
      p
        a.button.border(href=`/books`) Cancel

